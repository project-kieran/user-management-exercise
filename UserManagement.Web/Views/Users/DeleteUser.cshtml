@model UserManagement.Web.Models.Users.DeleteUserViewModel

<h2>Delete User</h2>

@* Display a confirmation message before deleting the user *@

<div>
    <p>Are you sure you want to delete the user @Model.Forename @Model.Surname?</p>
    <form asp-controller="Users" asp-action="DeleteUser" method="post">
        <input type="hidden" name="UserId" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>
